{
  "name": "@keypass/login-sdk",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "start": "node dist/server/index.js",
    "start:dev": "nodemon --exec ts-node --esm src/server/index.ts",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from test",
    "test:docker:cleanup": "docker-compose -f docker-compose.test.yml down -v",
    "verify:production": "node scripts/production-verification.js",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:integration": "jest --testPathPattern=integration"
  },
  "keywords": [
    "polkadot",
    "wallet",
    "authentication",
    "sdk",
    "web3",
    "did"
  ],
  "author": "Uliana Zavalova",
  "license": "MIT",
  "description": "Polkadot wallet-based authentication SDK",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uliana1one/keypass.git"
  },
  "bugs": {
    "url": "https://github.com/uliana1one/keypass/issues"
  },
  "homepage": "https://github.com/uliana1one/keypass#readme",
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/lib",
    "dist/types",
    "dist/errors",
    "dist/message",
    "dist/adapters",
    "dist/did",
    "dist/accounts",
    "dist/walletConnector.js",
    "dist/walletConnector.d.ts",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@polkadot/types-augment": "^10.11.2",
    "@polkadot/types-codec": "^10.11.2",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.0",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@polkadot/api": "^10.11.2",
    "@polkadot/extension-dapp": "^0.45.3",
    "@polkadot/types": "^10.11.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@semaphore-protocol/group": "^4.11.1",
    "@semaphore-protocol/identity": "^4.11.1",
    "@semaphore-protocol/proof": "^4.11.1",
    "@walletconnect/core": "^2.21.4",
    "@walletconnect/ethereum-provider": "^2.21.4",
    "@walletconnect/types": "^2.21.4",
    "@walletconnect/universal-provider": "^2.21.4",
    "@walletconnect/utils": "^2.21.4",
    "circomlib": "^2.0.5",
    "ethers": "^6.14.4",
    "express": "^4.21.2",
    "react": "^19.1.0",
    "snarkjs": "^0.7.5",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "semver": "^7.5.4",
    "ws": "^8.18.0",
    "tough-cookie": "^4.1.3"
  }
}

# WalletConnect Configuration
# Get your project ID from https://cloud.walletconnect.com/
WALLETCONNECT_PROJECT_ID=your-project-id
# Node environment: 'development' | 'production'
NODE_ENV=development

# Server port
PORT=3000

# Ethereum/Moonbeam RPC endpoint (for SBT fetching)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
MOONBEAM_RPC_URL=https://rpc.api.moonbeam.network

# Polkadot RPC endpoint
POLKADOT_RPC_URL=https://rpc.polkadot.io

# API keys for blockchain data providers (if used)
INFURA_API_KEY=your-infura-api-key
ALCHEMY_API_KEY=your-alchemy-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# JWT secret or session secret (if using authentication sessions)
JWT_SECRET=your-very-secret-key

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Sentry DSN (for error monitoring, optional)
SENTRY_DSN=

# Any other custom config for your app
# SBT_CACHE_TTL=300000
# SBT_CACHE_MAX_SIZE=100